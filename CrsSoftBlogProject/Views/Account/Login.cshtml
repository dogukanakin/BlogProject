@model CrsSoftBlogProject.Models.ViewModels.LoginViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<script src="~/js/Scripts/Account/LoginControl.min.js" asp-append-version="true"></script>

<section class="h-100">
        <div class="container h-100">
            <div class="row justify-content-center h-100">
                <div class="col-xxl-4 col-xl-5 col-lg-5 col-md-7 col-sm-9">
                   <div class="card shadow-lg my-5">
                     <div class="card-body p-5">
                            <h1 class="fs-4 card-title fw-bold mb-4">Login</h1>
                       <form method="post" class="needs-validation" novalidate autocomplete="off">
                                 <div class="mb-3">
                                    <label class="mb-2 text-muted">Username</label>
                                    <input type="text" id="username" class="form-control" asp-for="Username" required />
                                    <span class="text-danger" asp-validation-for="Username"></span>
                                 </div>

                                 <div class="mb-3">
                                    <label class="mb-2 text-muted">Password</label>
                                    <input type="password" id="password" class="form-control" asp-for="Password" required minlength="6" />
                                    <i class="bi bi-eye-slash" style="cursor:pointer" id="togglePassword"></i>

                                    <span class="text-danger" asp-validation-for="Password"></span>
                                 </div>

                                <div class="form-check mb-3">
                                    <input type="checkbox"  class="form-check-input">
                                    <label  class="form-check-label">Remember Me</label>
                                </div>

                                <div class="d-flex align-items-center">
                                    <button id="loginButton" type="submit" class="btn btn-primary ms-auto">Login</button>
                                </div>

                                <input type="hidden" asp-for="ReturnUrl" />
                       </form>
                    </div>
                </div>
            </div>
        </div>
     </div>
    </section>


@model CrsSoftBlogProject.Models.ViewModels.RegisterViewModel

<script src="~/js/Scripts/Account/RegisterControl.min.js" asp-append-version="true"></script>

<section class="h-100">
        <div class="container h-100">
            <div class="row justify-content-sm-center h-100">
                <div class="col-xxl-4 col-xl-5 col-lg-5 col-md-7 col-sm-9">
                    <div class="card shadow-lg my-5">
                        <div class="card-body p-5">
                            <h1 class="fs-4 card-title fw-bold mb-4">Register</h1>
                            <form method="POST" class="needs-validation" novalidate autocomplete="off">
                                <div class="mb-3">
                                    <label class="mb-2 text-muted" for="username">Username</label>
                                    <input id="username" type="text" asp-for="Username" class="form-control" name="username" required autofocus>
                                    <span class="text-danger" asp-validation-for="Username"></span>
                                </div>
                                <div class="mb-3">
                                    <label class="mb-2 text-muted" for="email">E-Mail Address</label>
                                    <input asp-for="Email" id="email" type="email" class="form-control form-group" />
                                    <span class="text-danger" asp-validation-for="Email"></span>
                                </div>

                                <div class="mb-3">
                                    <label class="mb-2 text-muted">Password</label>
                                    <input type="password" id="password" class="form-control" asp-for="Password" required minlength="6" />
                                    <span class="text-danger" asp-validation-for="Password"></span>
                                </div>
                                <p class="form-text text-muted mb-3">
                                    By registering, you agree to our terms and conditions.
                                </p>

                                <div class="align-items-center d-flex">
                                    <button id="registerButton" type="submit" class="btn btn-primary ms-auto">
                                        Register
                                    </button>
                                </div>
                            </form>
                        </div>
                        <div class="card-footer py-3 border-0">
                            <div class="text-center">
                                Already have an account? <a href="/Account/login" class="text-dark">Login</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
</section>


@model CrsSoftBlogProject.Models.ViewModels.AddContactFormViewModel

@{
    ViewData["Title"] = "Contact Us";
}
<link rel="stylesheet" runat="server" media="screen" href="~/css/CssFiles/ContactForm.min.css" />
<script src="~/js/Scripts/Contact/Contacts.min.js" asp-append-version="true"></script>

<section class="contact_us">
        @Html.AntiForgeryToken()
    <form id="addContactForm" method="post">
           <div class="container">
             <div class="row">
                <div class="col-md-10 offset-md-1">
                    <div class="contact_inner">
                        <div class="row">
                            <div class="col-md-10">
                                <div class="contact_form_inner">
                                    <div class="contact_field">
                                        <h3>Contact Us</h3>
                                        <p>Feel Free to contact us any time. We will get back to you as soon as we can!.</p>
                                        <input id="firstname" type="text" class="form-control form-group" asp-for="FirstName" placeholder="Name" />
                                        <span class="text-danger" asp-validation-for="FirstName"></span>
                                        <input asp-for="LastName" id="lastname" type="text" class="form-control form-group" placeholder="Last Name" />
                                        <span class="text-danger" asp-validation-for="LastName"></span>
                                        <input asp-for="Email" id="email" type="email" class="form-control form-group" placeholder="Email" />
                                        <span  class="text-danger" asp-validation-for="Email"></span>
                                        <textarea asp-for="Subject" id="subject" class="form-control form-group" placeholder="Message"></textarea>
                                        <span class="text-danger" asp-validation-for="Subject"></span>
                                        <button class="contact_form_submit">Send</button>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="right_conatct_social_icon d-flex align-items-end">
                                   
                                </div>
                            </div>
                        </div>
                        <div class="contact_info_sec">
                            <h4>Contact Info</h4>
                            <div class="d-flex info_single align-items-center">
                                <i class="fas fa-headset"></i>
                                <span>+911111 111111 1111</span>
                            </div>
                            <div class="d-flex info_single align-items-center">
                                <i class="fas fa-envelope-open-text"></i>
                                <span>info@crssoft.com</span>
                            </div>
                            <div class="d-flex info_single align-items-center">
                                <i class="fas fa-map-marked-alt"></i>
                                <span>Founded in 2010, Crs Soft is an international technology company that provides consulting and software development services.</span>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
     </form>
            <div class="container py-2">
                <div id="successMessage" class="alert alert-success" style="display: none;">
                    Contact form successfully sent!
                </div>
            </div>
</section>

<section class="map_sec">
    <div class="container">
        <div class="row">
            <div class="col-md-10 offset-md-1">
                <div class="map_inner">
                    <h4>Find Us on Google Map</h4>
                    <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Tempore quo beatae quasi assumenda, expedita aliquam minima tenetur maiores neque incidunt repellat aut voluptas hic dolorem sequi ab porro, quia error.</p>
                    <div class="map_bind">
                        <iframe src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d12041.07214820831!2d28.8889775!3d41.0193915!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14cabae216daf78b%3A0xadc277548a6b7657!2sCrs%20Soft!5e0!3m2!1str!2str!4v1691414652715!5m2!1str!2str" width="100%" height="450" frameborder="0" style="border:0;" allowfullscreen="" aria-hidden="false" tabindex="0"></iframe>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


